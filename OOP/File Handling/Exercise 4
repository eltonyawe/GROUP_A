import pandas as pd


# Read data from CSV file
file_path = 'loan_data.csv'
loan_data = pd.read_csv(file_path)


# Display the first few rows of the dataframe
print(loan_data.head())


# Example: Handle missing values
loan_data.fillna(method='ffill', inplace=True)


# Example: Convert categorical variables to numeric
loan_data = pd.get_dummies(loan_data, drop_first=True)


# Save the processed data to a new CSV file
output_file_path = 'processed_loan_data.csv'
loan_data.to_csv(output_file_path, index=False)


print(f"Processed data saved to {output_file_path}")


